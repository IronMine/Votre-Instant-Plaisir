{% extends 'base_admin.html.twig' %}

{% block title %}Produits Cave{% endblock %}

{% block body %}
    <h1>Produits Cave</h1>

    <table class="table">
        <thead>
            <tr>
               
                <th>Name</th>
                <th>Crud</th>
                <th>Description</th>
                <th>Little_description</th>
                <th>Sell</th>
                <th>Position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.crud }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.littleDescription }}</td>
                <td>{{ item.sell }}</td>
                <td>{{ item.position }}</td>
                <td>
                    <a href="{{ path('items_show', {'id': item.id}) }}">show</a>
                    <a href="{{ path('items_edit', {'id': item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('items_new') }}">Create new</a>
{% endblock %}
