{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!
{% endblock %}

{% block body %}

	{% if items | length > 0 %}
		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Prix</th>
					<th>Quantit√©</th>
					<th>Total</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				{% for item in items %}
					<tr>
						<td>{{ item.product.name }}</td>
						<td>{{ item.product.price }}</td>
						<td>{{ item.quantity }}</td>
						<td>{{ item.product.price * item.quantity }}</td>
						<td>
							<a href="#" class="btn btn-danger btn-sm">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
            <tfoot>
            <tr>
                <td colspan="3"> Total : </td>
                <td>{{total}}</td>
                <td></td>
            </tr>
            </tfoot>
		</table>
	{% else %}
		<p>Surprise, c'est vide !</p>
	{% endif %}
{% endblock %}
